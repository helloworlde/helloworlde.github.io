&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt; &lt;span style="color:#c678dd"&gt;return&lt;/span&gt; &lt;span style="color:#c1abea"&gt;postRepository&lt;/span&gt;.&lt;span style="color:#b3d23c"&gt;findAll&lt;/span&gt;();
